{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "moduleResolution": "node",
        "strict": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "noEmit": true,
        "skipLibCheck": true,
        "lib": ["dom", "esnext"]
    },
    "include": ["src"]
}
